<root BTCPP_format="4">
    <BehaviorTree ID="TestKick">
         <ReactiveSequence>
                <ReactiveSequence>
                    <SubTree ID="CamFindAndTrackBall" _autoremap="true" />
                    <SelfLocate mode="trust_direction" /> 
                    <!-- <CamScanField _while="!odom_calibrated"/> -->
                    
                    <CalcKickDir cross_threshold="0.5" />

                    <!-- 현재 striker의 kick decision 값이 들어가진 않으니 도움닫기는 adjust로만 수정 (kick 결정 ball.range < 0.8) 
                    1. adjust range : 0.6
                    2. kick_y_offset : 0.13

                    3. 킥의 setvelocity : 1.3
                    4. 킥 상태를 유지하는 최소 시간 min_msec_kick : 1000 -> non-stop은 300
                    5. 킥 직전/직후에 자세를 안정화하기 위해 대기하는 시간 msecs_stablize : 1000 -> non-stop은 100
                    -->
                    
                    <ReactiveSequence>
                        <StrikerDecide decision_out="{decision}" decision_in="{decision}" chase_threshold="0.8" kick_y_offset="-0.13" />

                        <Chase _while="decision=='chase'" vx_limit="0.9" vy_limit="0.2" vtheta_limit="1.0" dist="0.7" safe_dist="0.5" />

                        <Adjust _while="decision=='adjust'" no_turn_threshold="0.01" turn_threshold="0.5" range="0.6" vx_limit="0.7" vy_limit="0.6" vtheta_limit="1.5" vtheta_factor="1.5" tangential_speed_far="0.7" tangential_speed_near="0.15" kick_y_offset="-0.13" />

                        <Kick _while="decision=='kick' || decision=='one_touch'" speed_limit="1.3" vx_limit="1.3" vy_limit="0.3" min_msec_kick="1000" msecs_stablize="1000" kick_type="kick" />
                        


                    </ReactiveSequence>
                </ReactiveSequence>
        </ReactiveSequence>
    </BehaviorTree>
</root>
